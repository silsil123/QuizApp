@page
@using Domain
@model QuizApp.Pages_Games.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.Raw("Quiz name")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quiz.QuizName)
        </dd>
        <dt class="col-sm-2">
            @Html.Raw("Score")
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Game.Points + "/" + Model.Quiz.Questions.Count)
        </dd>
        <dt class="col-sm-2">
            @Html.Raw("Player name")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.PlayerName)
        </dd>
        <dt class="col-sm-2">
            @Html.Raw("Date created")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.DateCreated)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Index">Back to List</a> |
    <a asp-page="../Play/Result" asp-route-id="@Model.Game.GameId">Result</a>
</div>
