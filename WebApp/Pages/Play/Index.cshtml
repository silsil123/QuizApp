@page
@model QuizApp.Pages.Play.Index

@{
    ViewData["Title"] = "Enter player name and start!";
}
<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="col-md-8 mb-3">
        <label class="form-label"></label>
        <input asp-for="PlayerName" class="form-control" minlength="1" maxlength="128" id="PlayerName">
    </div>
    <div>
        <input asp-for="QuizId" hidden value="@Model.Quiz.QuizId">
    </div>
    <div class="col-md-4 mb-5">
        <button type="submit" class="btn btn-primary btn-lg">Start!</button>
    </div>
</form>
