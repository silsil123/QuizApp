@page
@model QuizApp.Pages_Quizzes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Quiz.QuizName</h1>

<div>
    <h4>Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.Raw("Quiz name")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quiz.QuizName)
        </dd>
        <dt class="col-sm-2">
            @Html.Raw("Creator name")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quiz.CreatorName)
        </dd>
        <dt class="col-sm-2">
                @Html.Raw("Times played")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quiz.TimesPlayed)
        </dd>
        <dt class="col-sm-2">
            @Html.Raw("Date created")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quiz.DateCreated)
        </dd>
        <dt class="col-sm-2">
            @Html.Raw("Description")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quiz.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Quiz.QuizId">Edit</a> |
    <a asp-page="/Play/Index" asp-route-id="@Model.Quiz.QuizId">Play</a> |
    <a asp-page="/Quizzes/Statistics" asp-route-id="@Model.Quiz.QuizId">Statistics</a> |
    <a asp-page="../Index">Back to List</a>
</div>
