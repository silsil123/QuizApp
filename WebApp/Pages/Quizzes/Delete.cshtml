@page
@model QuizApp.Pages_Quizzes.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>@Model.Quiz.QuizName</h1>

<h3>Are you sure you want to delete this quiz?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.Raw("Quiz name")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quiz.QuizName)
        </dd>
        <dt class="col-sm-2">
            @Html.Raw("Creator name")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quiz.CreatorName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Quiz.QuizId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="../Index">Back to List</a>
    </form>
</div>
